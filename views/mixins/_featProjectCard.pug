mixin captionedIcon(section, icon, caption)
  svg(class=`${section}__icon`)
    use(xlink:href=`img/sprite.svg#icon-${icon}`)
  span(class=`${section}__icon-caption`)= caption

mixin featProjectCard(project)
  .project__card
    a.project__title(href=`projects/${project.slug}/`)
      svg.project__icon--title: use(xlink:href=`img/sprite.svg#icon-${project.categories[0]}`, alt=`${project.categories[0]}`)
      span.project__name= project.name
    a(href=`projects/${project.slug}/`)
      img.project__img(src=`${project.coverImage}`)
    a(href=`projects/${project.slug}/`).project__summary= project.summary
    .project__links
      a.project__link(href=`${project.githubLink || '#'}`, target='blank')
        +captionedIcon('project', 'github', 'GitHub')
      a.project__link(href=`${project.liveLink || '#'}`, target='blank')
        +captionedIcon('project', 'live', 'Live')
