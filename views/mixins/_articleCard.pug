mixin articleCard(article, inlineStyle='', lazyLoad=false)
  - const sizeImage = (url, size='') => url.split('.')[0] + size + '.' + url.split('.')[1]
  - const im = article.cardImage
  a.article-card(href=`/articles/${article.slug}/`, style=inlineStyle)
    .article-card__text
      .article-card__title
        svg.article-card__icon
          use(xlink:href=`/img/sprite.svg#icon-${article.categories[0]}`, alt=`${article.categories[0]} icon`)
        .article-card__name= article.name
      ul.article-card__summary
        each point in article.summaryPoints
          li.article-card__point= point
    if lazyLoad
      img.lazy-img.article-card__img(srcset=`/img/${sizeImage(im, '-lazy')} 1x, /img/${sizeImage(im, '-lazy')} 2x`, data-srcset=`/img/${sizeImage(im, '-small')} 1x, /img/${im} 2x`, src=`/img/lazy-${im}`, alt=`${article.name} cover image`)
    else
      img.article-card__img(srcset=`/img/${sizeImage(im, '-small')} 1x, /img/${im} 2x`, alt=`${article.name} card image`, src=`/img/${im}`)
