extends ../base

include ../mixins/_projectRow
include ../mixins/_checkboxFilter

block content
  section.projects
    .section-title.mb-md.pt-lg all projects
    .projects__search.mb-md
      input.projects__search-box(id="searchInput", type="text", placeholder="Type to search...")
      select.projects__category-filter(id="categoryFilter")
        option(value="", selected)
          | Select category
        each category in uniqueCategories
          option(value=category) #{category}
      +checkboxFilter(uniqueTechs)
    .projects__content(id="projectsContent")
      each project in projects
        +projectRow(project, `/projects/${project.slug}/`)
        .row-divider

block scripts 
  script(src='https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js')
  script(src='/js/allProjects.js')
