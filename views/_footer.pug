mixin footerInfo(icon, caption)
  .footer__info-item
    svg.footer__icon
      use(xlink:href=`/img/sprite.svg#icon-${icon}`, alt=`${icon} icon`)
    .footer__caption= caption

include mixins/_iconLink

footer.footer#footer
  .footer__title
    .footer__line
    .footer__title-text Contact
    .footer__line
  .footer__info
    +footerInfo('location', 'San Diego, CA')
    +footerInfo('email', 'michael.michelotti4@gmail.com')
    +footerInfo('phone', '(650) 533-6841')
  .footer__links
    +iconLink('footer', githubLink, 'github')
    +iconLink('footer', resumeLink, 'resume')
    +iconLink('footer', linkedinLink, 'linkedin')
  .footer__copyright &copy; Michael Michelotti, 2024
