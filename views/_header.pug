header.header
  a.header__branding(href='/')
    svg.header__logo
      use(xlink:href='/img/sprite.svg#icon-logo', alt=`Michael michelotti logo`)
    .header__name Michael Michelotti
  nav.header__nav
    if filename.endsWith('landing.pug')
      a.header__link#nav-about(href='#about') About
      if projects
        a.header__link#nav-feat-projects(href='#feat-projects') Projects
      if articles
        a.header__link#nav-feat-articles(href='#feat-articles') Articles
      a.header__link#nav-skills(href='#skills') Skills
      a.header__link#nav-footer(href='#footer') Contact
    else if filename.endsWith('article.pug')
      a.header__link(href='/articles') All Articles
      a.header__link(href='/') Back Home
    else
      a.header__link(href='/') Back Home
